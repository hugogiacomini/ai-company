# ============================================================================
# AI COMPANY BACKEND CONFIGURATION
# ============================================================================

# Backend Selection
# Choose which backend to use for agent orchestration:
# - "crewai": Traditional sequential agent orchestration (default)
# - "claude_code": Claude Code custom subagents with parallel execution support
AI_COMPANY_BACKEND=crewai

# ============================================================================
# API KEYS
# ============================================================================

# OpenAI API Key (required for CrewAI backend)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (optional - Claude Code subagents run within Claude Code environment)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Other LLM providers
# GOOGLE_API_KEY=your_google_api_key_here

# ============================================================================
# COMPANY CONFIGURATION
# ============================================================================

COMPANY_NAME=AI Company Inc.

# Optional: Path to custom config file
# AI_COMPANY_CONFIG_PATH=config/company_config.yaml
